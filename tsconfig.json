{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": ["ES2017", "DOM"],
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "experimentalDecorators": true,
        "strict": true
        /* Additional Checks */
